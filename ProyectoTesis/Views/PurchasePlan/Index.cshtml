@model IEnumerable<ProyectoTesis.Models.PurchasePlan>

@{
    ViewBag.Title = "Plan de Compra";
}

<h2>Planes de Compra</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BeginDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Investment)
        </th>
        <th>
            Beneficio Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BeginDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Investment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalBenefit)
        </td>
        <td>
            <a href="@Url.Action("Details", "PurchasePlan", new { id = item.ID, PurchaseOrderID = ViewBag.PurchaseOrder})"><i class="fa fa-eye"></i></a> |
            <a href="@Url.Action("Delete", "PurchasePlan", new { id = item.ID, PurchaseOrderID = ViewBag.PurchaseOrder})"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
}

</table>
