@model IEnumerable<ProyectoTesis.Models.Zone>

@{
    ViewBag.Title = "Zona";
}

<h2>Zona de Almacén</h2>

<p>
    @Html.ActionLink("Nueva", "Create", new { StockroomID = ViewBag.Stockroom })
</p>
<table class="table">
    <tr>
        <th>
            Almacén
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Stockroom.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>            
            <a href="@Url.Action("Edit", new { id = item.ID, StockroomID = ViewBag.Stockroom })"><i class="fa fa-pencil"></i></a> |
            @*<a href="@Url.Action("Details", new { id = item.ID, StockroomID = ViewBag.Stockroom  })"><i class="fa fa-eye"></i></a> |*@
            <a href="@Url.Action("Delete", new { id = item.ID, StockroomID = ViewBag.Stockroom  })"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
}

</table>
