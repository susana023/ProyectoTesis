
@{
    ViewBag.Title = "Inicio de Sesión";
    Layout = null;
}

<link href="~/Content/bootstrap_simplex.css" rel="stylesheet" />
<br />
<br />
<p style="color:orangered;font-size:medium;">@ViewBag.Message</p>
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Inicio de Sesión</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Usuario" id="user" name="user" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Contraseña" id="password" name="password" type="password" value="">
                            </div>
                            <!-- Change this to a button or input when using this as a form -->                            
                            <button class="btn btn-lg btn-success btn-block" id="button">Iniciar Sesión</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap_simplex.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script type="text/javascript">
        function OnSuccess(response) {
            alert(response.d);
        }

        $(document).ready(function () {
            $(".btn").click(function () {
                var user = $("#user").val();
                var password = $("#password").val();
                //$.(url, { userName: user, password: password }, function (data) {
                //});
                $.ajax(
                    {
                        type: "POST",
                        url: "/Home/Loging",
                        data: {
                            userName: user, password: password
                        }
                    }); 
            });
        });
    </script>
}