<!DOCTYPE html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        ViewBag.Title = "Inicio de Sesión";
        Layout = null;
    }

    <link href="~/Content/bootstrap_simplex.css" rel="stylesheet" />
    <br />
    <br />
    <p style="color:orangered;font-size:medium;">@ViewBag.Message</p>
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Inicio de Sesión</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Usuario" id="user" name="user" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Contraseña" id="password" name="password" type="password" value="">
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-lg btn-success btn-block" id="button">Iniciar Sesión</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-3.2.1.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".btn").click(function () {
                var user = $("#user").val();
                var password = $("#password").val();
                $.ajax({
                    type: "POST",
                    url: "/Home/Loging",
                    data: {
                        userName: user, password: password
                    },
                    contentType: 'application/json; charset=utf-8',
                        success: function(result) {
                            if (result.success === 'true') {
                                window.location.href = '/Home/Index';
                            } else {
                                @ViewBag.Message = 'Usuario o contraseña incorrectos'
                                window.location.href = '/Home/Login';       
                            }
                        },
                    failure: function () {
                        //handle the failure of the request itself
                        }
                });
            });
        });
    </script>

</body>




